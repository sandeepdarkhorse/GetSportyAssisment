<resources>

    <declare-styleable name="CropImageView">
        <attr name="cropGuidelines">
            <enum name="off" value="0" />
            <enum name="onTouch" value="1" />
            <enum name="on" value="2" />
        </attr>
        <attr name="cropScaleType">
            <enum name="fitCenter" value="0" />
            <enum name="center" value="1" />
            <enum name="centerCrop" value="2" />
            <enum name="centerInside" value="3" />
        </attr>
        <attr name="cropShape">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
        </attr>
        <attr name="cropAutoZoomEnabled" format="boolean" />
        <attr name="cropMaxZoom" format="integer" />
        <attr name="cropMultiTouchEnabled" format="boolean" />
        <attr name="cropFixAspectRatio" format="boolean" />
        <attr name="cropAspectRatioX" format="integer" />
        <attr name="cropAspectRatioY" format="integer" />
        <attr name="cropInitialCropWindowPaddingRatio" format="float" />
        <attr name="cropBorderLineThickness" format="dimension" />
        <attr name="cropBorderLineColor" format="color" />
        <attr name="cropBorderCornerThickness" format="dimension" />
        <attr name="cropBorderCornerOffset" format="dimension" />
        <attr name="cropBorderCornerLength" format="dimension" />
        <attr name="cropBorderCornerColor" format="color" />
        <attr name="cropGuidelinesThickness" format="dimension" />
        <attr name="cropGuidelinesColor" format="color" />
        <attr name="cropBackgroundColor" format="color" />
        <attr name="cropSnapRadius" format="dimension" />
        <attr name="cropTouchRadius" format="dimension" />
        <attr name="cropSaveBitmapToInstanceState" format="boolean" />
        <attr name="cropShowCropOverlay" format="boolean" />
        <attr name="cropShowProgressBar" format="boolean" />
        <attr name="cropMinCropWindowWidth" format="dimension" />
        <attr name="cropMinCropWindowHeight" format="dimension" />
        <attr name="cropMinCropResultWidthPX" format="float" />
        <attr name="cropMinCropResultHeightPX" format="float" />
        <attr name="cropMaxCropResultWidthPX" format="float" />
        <attr name="cropMaxCropResultHeightPX" format="float" />
        <attr name="cropFlipHorizontally" format="boolean" />
        <attr name="cropFlipVertically" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomCalendarView">
        <attr name="calendarTitleTextColor" format="color" />
        <attr name="dayOfWeekTextColor" format="color" />
        <attr name="dayOfMonthTextColor" format="color" />
        <attr name="calendarBackgroundColor" format="color" />
        <attr name="disabledDayBackgroundColor" format="color" />
        <attr name="disabledDayTextColor" format="color" />
        <attr name="selectedDayBackgroundColor" format="color" />
        <attr name="selectedDayTextColor" format="color" />
        <attr name="weekLayoutBackgroundColor" format="color" />
        <attr name="titleLayoutBackgroundColor" format="color" />
        <attr name="currentDayOfMonthColor" format="color" />
    </declare-styleable>


    <declare-styleable name="JellyRefreshLayout">
        <attr name="jellyColor" format="color" />
        <attr name="headerHeight" format="dimension" />
        <attr name="pullHeight" format="dimension" />
        <attr name="triggerHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalCalendarView">
        <!-- Text color for all dates except selected Date.-->
        <attr name="textColorNormal" format="color" />
        <!-- Text color for selected Date. -->
        <attr name="textColorSelected" format="color" />
        <!-- Background color for selector bar. -->
        <attr name="selectorColor" format="color" />
        <!-- Background drawable for selected date item. -->
        <attr name="selectedDateBackground" format="reference" />
        <!-- Text size for month name. -->
        <attr name="textSizeMonthName" format="dimension" />
        <!-- Text size for day number. -->
        <attr name="textSizeDayNumber" format="dimension" />
        <!-- Text size for day name. -->
        <attr name="textSizeDayName" format="dimension" />
    </declare-styleable>
    <declare-styleable name="JustifiedTextView">
        <attr name="text" format="reference" />
    </declare-styleable>




    <declare-styleable name="ShapeOfView">
        <attr name="clip_drawable" format="reference"/>
    </declare-styleable>
    <declare-styleable name="TriangleView">
        <attr name="triangle_percentLeft" format="float"/>
        <attr name="triangle_percentBottom" format="float"/>
        <attr name="triangle_percentRight" format="float"/>
    </declare-styleable>
    <declare-styleable name="CircleView">
        <attr name="circle_borderWidth" format="dimension"/>
        <attr name="circle_borderColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="DiagonalView">
        <attr name="diagonal_angle" format="integer"/>
        <attr name="diagonal_position" format="enum">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="diagonal_direction" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="ArcView">
        <attr name="arc_height" format="dimension"/>
        <attr name="arc_position" format="enum">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="arc_cropDirection" format="enum">
            <enum name="inside" value="1"/>
            <enum name="outside" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="BubbleView">
        <attr name="bubble_borderRadius" format="dimension"/>
        <attr name="bubble_arrowHeight" format="dimension"/>
        <attr name="bubble_arrowWidth" format="dimension"/>
        <attr name="bubble_arrowPosition" format="enum">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="RoundRectView">
        <attr name="roundRect_topLeftDiameter" format="dimension"/>
        <attr name="roundRect_topRightDiameter" format="dimension"/>
        <attr name="roundRect_bottomLeftDiameter" format="dimension"/>
        <attr name="roundRect_bottomRightDiameter" format="dimension"/>
        <!--
        <attr name="roundRect_borderWidth" format="dimension"/>
        <attr name="roundRect_borderColor" format="color"/>
        -->
    </declare-styleable>

    <declare-styleable name="CutCornerView">
        <attr name="cutCorner_topLeftSize" format="dimension"/>
        <attr name="cutCorner_topRightSize" format="dimension"/>
        <attr name="cutCorner_bottomLeftSize" format="dimension"/>
        <attr name="cutCorner_bottomRightSize" format="dimension"/>
    </declare-styleable>


</resources>