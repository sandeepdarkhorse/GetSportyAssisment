<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_profile_back"
                android:transitionName="@string/simple_fragment_transition" />

            <ProgressBar
                android:id="@+id/progressBarImageLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#bdbdbd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/event_title"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_back"
                        android:background="@android:color/transparent"
                        android:text="30th FINA World Championship "
                        android:textColor="@color/text_heading_color"
                        android:textSize="@dimen/body_text_small"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top|left"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/date"
                            />
                        <TextView
                            android:id="@+id/event_date"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_back"
                            android:background="@android:color/transparent"
                            android:text="27th Nov - 30th Nov 2015"
                            android:textSize="@dimen/body_text_small"
                            android:textColor="@color/statusbar_profile"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top|left"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/location"

                            />
                        <TextView
                            android:id="@+id/event_location"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative_back"
                            android:background="@android:color/transparent"
                            android:textSize="@dimen/body_text_small"
                            android:textColor="@color/statusbar_profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top|left"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_soccer_black_18dp"
                            android:tint="@color/statusbar_profile"  />
                        <TextView
                            android:id="@+id/sport_name"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event_id"
                            android:textSize="@dimen/body_text_small"
                            android:textColor="@color/statusbar_profile"
                            />
                        <TextView
                            android:id="@+id/event_type"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/event_registration"
                            android:textSize="@dimen/body_text_small"
                            android:textColor="@color/statusbar_profile"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom|right"
                    android:padding="5dp">



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/share_event"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/job_share"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tour_liveupdate"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_corners"
                    android:text="Live update"
                    android:textColor="@color/primary_white"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/event_publish"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/roundedcorner_transparent"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/published"
                    android:textColor="@color/my_profile"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/event_applicant"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_corner_blue"
                    android:text="@string/participant"
                    android:textColor="@color/primary_white"
                    android:elevation="7dp"
                    android:gravity="center"
                    android:padding="3dp"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"/>
                </RelativeLayout>

            </LinearLayout>






        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>