<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/technical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:id="@+id/technical_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <darkhorsesports.getsporty.pieChart.charts.PieChart
                        android:id="@+id/technical_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/technical_text"
                        android:layout_weight="1"
                        ></darkhorsesports.getsporty.pieChart.charts.PieChart>
                    <TextView
                        android:id="@+id/technical_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="Technical"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/tactical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <RelativeLayout
                    android:id="@+id/tactical_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <darkhorsesports.getsporty.pieChart.charts.PieChart
                        android:id="@+id/tactical_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/tactical_text"
                        android:layout_weight="1"></darkhorsesports.getsporty.pieChart.charts.PieChart>
                    <TextView
                        android:id="@+id/tactical_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="Tactical"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/physical"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/physical_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <darkhorsesports.getsporty.pieChart.charts.PieChart
                        android:id="@+id/physical_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/physical_text"
                        android:layout_weight="1"></darkhorsesports.getsporty.pieChart.charts.PieChart>
                    <TextView
                        android:id="@+id/physical_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="Physical"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/psycho"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:visibility="gone">
                <RelativeLayout
                    android:id="@+id/psycho_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <darkhorsesports.getsporty.pieChart.charts.PieChart
                        android:id="@+id/psycho_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/psycho_text"
                        android:layout_weight="1"></darkhorsesports.getsporty.pieChart.charts.PieChart>
                    <TextView
                        android:id="@+id/psycho_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="Psychological"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
