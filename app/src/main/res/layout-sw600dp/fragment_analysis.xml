<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/suggestion_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:elevation="3dp"
            >
            <Button
                android:id="@+id/suggestion"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/accounting"
                android:text="Suggestion"
                android:textAllCaps="false"
                android:textColor="@color/primary_white"
                android:textSize="12sp"
                />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/save"
            android:layout_below="@+id/suggestion_layout"
            android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/toolbar_color_home"
            android:elevation="3dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/primary_white"
            />
    </RelativeLayout>

</FrameLayout>
