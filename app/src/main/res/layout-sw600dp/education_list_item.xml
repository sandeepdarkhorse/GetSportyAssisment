<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_sport_education"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:elevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center|left"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="3dp"
                android:text="Name of the degree"
                android:textAllCaps="false"
                android:textColor="@color/text_heading_color"
                android:textSize="@dimen/body_text" />



            <ImageView
                android:id="@+id/edit_data"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@mipmap/edit"
                />

        </RelativeLayout>


        <TextView
            android:id="@+id/org_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Institute/Organization Name"
            android:textAllCaps="false"
            android:textSize="@dimen/body_text1" />

        <TextView
            android:id="@+id/stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Stream/Soecialization"
            android:textAllCaps="false"
            android:textSize="@dimen/body_text1" />

        <TextView
            android:id="@+id/degree_duraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:text="Degree duraction"
            android:textAllCaps="false"
            android:textSize="@dimen/body_text1" />

    </LinearLayout>

</android.support.v7.widget.CardView>
