<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/layout_logs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_shadow_whiteback"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/diet_logs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/primary_white" />

            <TextView
                android:id="@+id/noLogLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:text="No Diet Logs Yet" />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/tooltip_nav_up"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/layout_logs"
        android:layout_gravity="right"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="98dp"
        android:layout_marginRight="135dp" />

</LinearLayout>