<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="  JOB OFFER DETAILS"
            android:textColor="@color/primary_white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="130dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:background="@color/primary_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center|top"
            android:text="x"
            android:textColor="@color/primary_white"
            android:textSize="25dp"
            android:textStyle="bold" />


    </RelativeLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ADD DETAILS HERE"
                android:textColor="@color/primary_white"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/employe_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@android:color/white"
                android:hint="EMPLOYMENT TYPE"
                android:inputType="textMultiLine"
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/experiance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:hint="EXPERIENCE"
                android:inputType="textMultiLine"
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:visibility="gone" />


            <EditText
                android:id="@+id/joining_date1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:hint="JOINING DATE"
                android:inputType="textMultiLine"
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:textColor="@color/textcolor_darkblack"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/whiteback_without_corner">
                <TextView
                    android:id="@+id/joining_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/white"
                    android:gravity="center|left"
                    android:hint="JOINING DATE"

                    android:paddingLeft="5dp"
                    android:textColor="@color/textcolor_darkblack"
                    />
                <ImageView
                    android:id="@+id/date_calender"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="2dp"
                    android:src="@mipmap/calendar_icon"
                    />

            </RelativeLayout>


            <EditText
                android:id="@+id/salary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:hint="SALARY"
                android:inputType="number"
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:textColor="@color/textcolor_darkblack" />



            <EditText
                android:id="@+id/other_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size"
                android:layout_marginTop="30dp"
                android:background="@android:color/white"
                android:hint="OTHER DETAILS"
                android:inputType="textMultiLine"
                android:minHeight="60dp"
                android:paddingLeft="10dp"
                android:textColor="@color/textcolor_darkblack"
                android:visibility="gone"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_size"
                android:layout_marginTop="60dp"
                android:background="#00A8F3"
                android:text="SEND OFFER"
                android:textColor="@color/primary_white" />


        </LinearLayout>

</LinearLayout>


