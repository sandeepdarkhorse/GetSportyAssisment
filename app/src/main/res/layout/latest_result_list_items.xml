<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPETITION DETAILS"
            android:textColor="#2196f3"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/edit_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/edit" />

        <TextView
            android:id="@+id/comp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading"
            android:layout_marginTop="15dp"
            android:text="Name of the competition"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comp_text"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="Name of competition"
            android:textColor="#757575"
            android:textSize="@dimen/profile_font_size" />

        <ImageView
            android:id="@+id/add_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/heading"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/add" />

        <TextView
            android:id="@+id/result_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comp_name"
            android:layout_marginTop="15dp"
            android:text="Date of competition"
            android:textColor="#000000"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_date_text"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="Date of competition"
            android:textColor="#757575"
            android:textSize="@dimen/profile_font_size" />

        <TextView
            android:id="@+id/event_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_date"
            android:layout_marginTop="15dp"
            android:text="Event"
            android:textColor="#000000"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_text"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="Event name"
            android:textColor="#757575"
            android:textSize="@dimen/profile_font_size" />

        <TextView
            android:id="@+id/result_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event"
            android:layout_marginTop="15dp"
            android:text="Result"
            android:textColor="#000000"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/result_title_text"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="Your result"
            android:textColor="#757575"
            android:textSize="@dimen/profile_font_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_title"
            android:layout_marginTop="15dp"
            android:text="Score"
            android:textColor="#000000"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/score_text"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="Your score"
            android:textColor="#757575"
            android:textSize="@dimen/profile_font_size"
            android:textStyle="bold" />
    </RelativeLayout>


</android.support.v7.widget.CardView>





















